<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('partials/header', {title: "Login"}) %>
</head>

<body>
  <!-- Navigation Bar -->
  <%- include('partials/navbar') %>

    <!-- Login Page -->
    <div class="container w-50 btm-up">
      <h2>Login</h2>
      <form id="loginForm" action="/login" method="post">
        <div class="mb-3">
          <label for="username" class="form-label">Email</label>
          <input type="text" name="email" class="form-control" id="username" required>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" minlength="4" name="password" class="form-control" id="password" required>
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
      </form>
    </div>
    <!-- Footer -->
    <%- include('partials/footer') %> 
  </body>
  
  </html> 