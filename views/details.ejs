<body>
  <!-- Navigation Bar -->
  <%- include('partials/navbar') %> 

  <div class="container mt-4 w-50 btm-up">
    <h2>Movie Details</h2>
    <div class="row">
      <div class="col-md-4 d-flex align-items-center justify-content-center">
        <img src="/movie_cover/<%= result.poster %>" alt="Movie Cover" class="img-fluid movie-cover" style="max-width: 100%; max-height: 300px;">
      </div>
      <div class="col-md-8">
        <h3><%= result.name %></h3>
        <p><strong>Title:</strong> <%= result.title %></p>
        <p><strong>Genre:</strong> <%= result.genre %></p>
        <p><strong>Release Date:</strong> <%= result.date.toLocaleDateString('en-US', { day: 'numeric', month: 'numeric', year: 'numeric' })%></p>
      </div>
    </div>
  </div>
    </div>
    
  <!-- Footer -->
  <%- include('partials/footer') %> 
